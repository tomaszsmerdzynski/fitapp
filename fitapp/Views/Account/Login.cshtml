@model fitapp.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}

<h2>Logowanie</h2>

<div class="login-form">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="login-error">
            @Html.ValidationMessage("loginerror", "")
        </div>

        <table class="login-table">
            <tr>
                <td>
                    @Html.LabelFor(o => o.Email, "E-mail: ")
                </td>
                <td>
                    @Html.TextBoxFor(o => o.Email, new { Class = "textbox" })
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.Email)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(o => o.Password, "Hasło: ")
                </td>
                <td>
                    @Html.TextBoxFor(o => o.Password, new { Class = "textbox" })
                    <div class="login-validation-message">
                        @Html.ValidationMessageFor(o => o.Password)
                    </div>
                </td>
                @*<td></td>*@
            </tr>
            <tr>
                <td colspan="3">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </td>
            </tr>
            <tr>
                <td colspan="3" style="padding: 2.5em 0 0 0">
                    <input class="submit-link" type="submit" value="Zaloguj się" />
                </td>
            </tr>
        </table>
    }

    <div class="link">
        <a href="@Url.Action("Register")">Nie masz konta? Zarejestruj się!</a>
    </div>
</div>

@section ScriptsBottom
{
    @System.Web.Optimization.Scripts.Render("~/bundles/jquery")
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
}